---
import ProjectCard from "../components/ProjectCard.astro";
let data = []
try {
	const res = await fetch("https://api.github.com/orgs/magitools/repos");
	data = await res.json();
} catch (error) {
	throw new Error("could not get data from github")
}
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Magitools</title>
	</head>
	<body>
		<section class="bg-gray-50">
			<div
				class="mx-auto max-w-screen-xl px-4 py-32 lg:flex lg:h-screen lg:items-center"
			>
				<div class="mx-auto max-w-xl text-center">
					<h1 class="text-3xl font-extrabold sm:text-5xl">
						Magitools
						<strong class="font-extrabold text-red-700 sm:block">
							Practical Solutions
						</strong>
					</h1>

					<p class="mt-4 sm:text-xl/relaxed">
						We build free, open source solutions to complex problems
					</p>

					<div class="mt-8 flex flex-wrap justify-center gap-4">
						<a
							target="_blank"
							rel="noreferrer"
							class="block w-full rounded bg-red-600 px-12 py-3 text-sm font-medium text-white shadow hover:bg-red-700 focus:outline-none focus:ring active:bg-red-500 sm:w-auto"
							href="https://github.com/orgs/magitools/repositories"
						>
							See Projects
						</a>

						<!-- 				  <a
					class="block w-full rounded px-12 py-3 text-sm font-medium text-red-600 shadow hover:text-red-700 focus:outline-none focus:ring active:text-red-500 sm:w-auto"
					href="/about"
				  >
					Sponsor
				  </a> -->
					</div>
				</div>
			</div>
		</section>
		<section>
			<div
				class="max-w-screen-xl px-4 py-8 sm:px-6 sm:py-12 lg:px-8 lg:py-16"
			>
				<div
					class="grid grid-cols-1 gap-y-8 lg:grid-cols-2 lg:items-center lg:gap-x-16"
				>
					<div
						class="mx-auto max-w-lg text-center lg:mx-0 ltr:lg:text-left rtl:lg:text-right"
					>
						<h2 class="text-3xl font-bold sm:text-4xl">
							Find your career path
						</h2>

						<p class="mt-4 text-gray-600">
							Lorem ipsum dolor sit amet consectetur adipisicing
							elit. Aut vero aliquid sint distinctio iure ipsum
							cupiditate? Quis, odit assumenda? Deleniti quasi
							inventore, libero reiciendis minima aliquid tempora.
							Obcaecati, autem.
						</p>

						<a
							href="#"
							class="mt-8 inline-block rounded bg-indigo-600 px-12 py-3 text-sm font-medium text-white transition hover:bg-indigo-700 focus:outline-none focus:ring focus:ring-yellow-400"
						>
							Get Started Today
						</a>
					</div>

					<div class="grid grid-cols-2 gap-4 sm:grid-cols-3">
						{
							data
								.filter(
									(e: { name: string; }) =>
										e.name !== "landing" &&
										e.name !== ".github",
								)
								.sort(
									(a: { pushed_at: string | number | Date; }, b: { pushed_at: string | number | Date; }) =>
										new Date(b.pushed_at).getTime() -
										new Date(a.pushed_at).getTime(),
								)
								.map((e: { description: any; name: any; html_url: any; }) => (
									<ProjectCard
										description={e.description}
										name={e.name}
										url={e.html_url}
									/>
								))
						}
					</div>
				</div>
			</div>
		</section>
	</body>
</html>
